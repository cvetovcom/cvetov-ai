rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Правила для пользователей
    match /users/{userId} {
      // Пользователь может читать и изменять только свои данные
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Вложенные коллекции
      match /chats/{chatId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;

        match /messages/{messageId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }

      match /recipients/{recipientId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /deliveries/{deliveryId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Гостевые чаты (для неавторизованных пользователей)
    match /guest_chats/{sessionId} {
      // Любой может создавать и читать гостевые чаты
      allow create: if true;
      allow read, update: if true;

      match /messages/{messageId} {
        allow read, write: if true;
      }
    }
  }
}
